{
  "manifest_version": 3,
  "name": "Text Summarizer and Chatbot",
  "description": "Summarize text and discuss the summary using OpenAI GPT-4.",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "textsummarizer@example.com",
      "strict_min_version": "55.0"
    }
  }
}
