{
  "manifest_version": 3,
  "name": "Text Summarizer and Chatbot",
  "description": "Summarize text and discuss the summary using OpenAI GPT-4.",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
