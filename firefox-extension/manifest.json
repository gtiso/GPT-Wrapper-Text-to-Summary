{
    "manifest_version": 2,
    "name": "Text Summarizer",
    "description": "Summarize text using OpenAI GPT-4.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "applications": {
      "gecko": {
        "id": "textsummarizer@example.com",
        "strict_min_version": "91.0"
      }
    }
  }
  